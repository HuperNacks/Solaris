@using Microsoft.AspNetCore.Identity
@using Solaris.Core.Entities
@using Solaris.Infrastructure.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://colorlib.com/etc/bootstrap-sidebar/sidebar-05/css/style.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar" class="">
        <div class="custom-menu">
            <button type="button" id="sidebarCollapse" class="btn btn-primary">
                <i class="fa fa-bars"></i>
                <span class="sr-only">Toggle Menu</span>
            </button>
        </div>
        <div class="p-4">
            <h1><a asp-area="Admin" asp-controller="Admin" asp-action="Dashboard" class="logo">Solaris<span>amogus</span></a></h1>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a href="#"><span class="fa fa-home mr-3"></span> Home</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li>
                        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index"><span class="fa fa-user mr-3"></span>Profile</a>
                    </li>
                }
                <li>
                    <a href="#"><span class="fa fa-briefcase mr-3"></span> Works</a>
                </li>
                <li>
                    <a href="#"><span class="fa fa-suitcase mr-3"></span> Gallery</a>
                </li>
                @if (User.IsInRole(Constants.Roles.Master))
                {
                    <li>
                        <a asp-area="Admin" asp-controller="Admin" asp-action="UsersManager"><span class="fa fa-cogs mr-3"></span>Users Manager</a>
                    </li>
                }
                
               
            </ul>
            
           
        </div>
    </nav>

    <div id="content" class="p-4 p-md-5 pt-5">
        @RenderBody()
    </div>
</div>
